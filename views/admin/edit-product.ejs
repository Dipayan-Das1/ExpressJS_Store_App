
<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/public/css/forms.css">
<link rel="stylesheet" href="/public/css/product.css">

</head>
<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/manage/<%= editing ? 'edit-product' : 'add-product' %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <% if (editing) {%>
                    <input type="text" name="title" id="title" value="<%=product.title %>">
                <% } else { %>           
                    <input type="text" name="title" id="title">
                <% } %>

            </div>
            <div class="form-control">
                <label for="title">Price</label>
                
                <% if (editing) {%>
                    <input type="number" name="price" id="price" value="<%=product.price %>">
                <% } else { %> 
                    <input type="number" name="price" id="price">
                <% } %>
                
            </div>
            <div class="form-control">
                <label for="title">Description</label>
                

                <% if (editing) {%>
                    <textarea name="description" id="description" rows="5"><%=product.description %></textarea>
                <% } else { %> 
                    <textarea name="description" id="description" rows="5"></textarea>
                <% } %>
                
            </div>
            <% if (editing) {%>
                <input type="hidden" name="id" id="id" value="<%=product._id %>">
            <% }%> 
                
            
            
            <button type="submit">
                <% if (editing) {%>
                    Edit Product
                <% } else { %> 
                    Add Product
                <% } %>
                
            </button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>